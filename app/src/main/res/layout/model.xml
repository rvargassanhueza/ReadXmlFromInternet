<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/articleImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/placeholder"
            tools:layout_conversion_absoluteHeight="84dp"
            tools:layout_conversion_absoluteWidth="150dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />


        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="349dp"
            android:layout_height="43dp"
            android:layout_marginLeft="8dp"
            android:padding="10dp"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            card_view:layout_constraintLeft_toLeftOf="parent"
            tools:layout_conversion_absoluteHeight="46dp"
            tools:layout_conversion_absoluteWidth="214dp"
            tools:layout_conversion_absoluteX="150dp"
            tools:layout_conversion_absoluteY="0dp"
            tools:layout_editor_absoluteY="8dp" />


        <!--  <TextView
                android:id="@+id/descTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:lines="3"
                android:padding="10dp"
                android:text="Description....................."

                android:textAppearance="?android:attr/textAppearanceLarge" />-->

        <TextView
            android:id="@+id/dateHoraTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:textStyle="italic"
            android:visibility="invisible"
            tools:layout_conversion_absoluteHeight="21dp"
            tools:layout_conversion_absoluteWidth="36dp"
            tools:layout_conversion_absoluteX="150dp"
            tools:layout_conversion_absoluteY="46dp"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="46dp" />

        <TextView
            android:id="@+id/dateFechaTxt"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:textStyle="italic"
            android:visibility="invisible"
            tools:layout_conversion_absoluteHeight="21dp"
            tools:layout_conversion_absoluteWidth="214dp"
            tools:layout_conversion_absoluteX="150dp"
            tools:layout_conversion_absoluteY="67dp"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="67dp" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>